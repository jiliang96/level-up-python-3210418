import re
def is_palindrome(string):
  str_in = re.sub(r'[^A-Za-z]', "", string).lower()
  str_rev = ""
  for i in range(1, (len(str_in)+1)):
    str_rev = str_rev + str_in[-i]
  
  return str_in == str_rev

print(is_palindrome("hello world"))
print(is_palindrome("level"))
print(is_palindrome("abcde dcba"))

print("".join("abc"))
print("X".join("abc"))